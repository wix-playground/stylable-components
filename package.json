{
  "name": "wix-react-components",
  "version": "0.0.1",
  "description": "Common, fully-tested, strictly-typed, Wix-styled, React components library",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "clean": "rimraf ./lib",
    "build": "tsc -d --p tsconfig.publish.json",
    "prepublish": "npm run build",
    "test": "npm run test:browser && npm run test:node",
    "test:browser": "karma start --single-run",
    "test:node": "mocha --compilers ts:ts-node/register,tsx:ts-node/register,css:stylable-integration/require \"./test/node/**/*.node-spec.ts?(x)\"",
    "start": "webpack-dev-server --progress"
  },
  "peerDependencies": {
    "react": ">15.5.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.14",
    "@types/react": "^15.0.38",
    "@types/react-dom": "^15.5.1",
    "glob": "^7.1.2",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-sauce-launcher": "^1.1.0",
    "karma-webpack": "^2.0.4",
    "mobx": "^3.2.1",
    "mobx-react": "^4.2.2",
    "mobx-react-devtools": "^4.2.15",
    "mocha": "^3.4.2",
    "mocha-loader": "^1.1.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "stylable-integration": "^2.0.7",
    "test-drive-react": "^0.5.0",
    "ts-loader": "^2.3.1",
    "ts-node": "^3.2.0",
    "typescript": "^2.4.2",
    "webpack": "^3.3.0",
    "webpack-dev-server": "^2.5.1"
  },
  "testGlob": "./test/**/*.spec.ts?(x)",
  "license": "MIT",
  "dependencies": {
    "stylable": "^1.0.5",
    "stylable-react-component": "^1.0.3"
  }
}
