{
  "name": "stylable-components",
  "version": "0.0.2",
  "description": "Fully-tested & strictly-typed component library based on React, using optional Wix styling.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "clean": "rimraf ./lib",
    "build": "tsc -d --p tsconfig.publish.json && stc --srcDir=src --outDir=lib",
    "prepublish": "npm run build",
    "test": "npm run test:browser && npm run test:node",
    "test:browser": "karma start --single-run",
    "test:node": "mocha --compilers ts:ts-node/register,tsx:ts-node/register,css:stylable-integration/require \"./test/node/**/*.node-spec.ts?(x)\"",
    "start": "webpack-dev-server --progress"
  },
  "peerDependencies": {
    "react": ">15.5.0",
    "stylable": "^3.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.17",
    "@types/react": "^15.6.0",
    "@types/react-dom": "^15.5.1",
    "glob": "^7.1.2",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-sauce-launcher": "^1.1.0",
    "karma-webpack": "^2.0.4",
    "mobx": "^3.2.2",
    "mobx-react": "^4.2.2",
    "mobx-react-devtools": "^4.2.15",
    "mocha": "^3.4.2",
    "mocha-loader": "^1.1.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "stylable": "^3.0.0",
    "stylable-integration": "^3.0.8",
    "stylable-react-component": "^1.0.3",
    "test-drive-react": "^0.5.1",
    "ts-loader": "^2.3.2",
    "ts-node": "^3.3.0",
    "typescript": "^2.4.2",
    "webpack": "^3.4.1",
    "webpack-dev-server": "^2.6.1"
  },
  "testGlob": "./test/**/*.spec.ts?(x)",
  "license": "MIT",
  "files": [
    "lib",
    "src",
    "typings"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:wix/stylable-components.git"
  }
}
